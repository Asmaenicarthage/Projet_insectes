{% extends 'base.html.twig' %}

{% block body %}
    <h1>Asma</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ asma.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ asma.nom }}</td>
            </tr>
            <tr>
                <th>Race</th>
                <td>{{ asma.race }}</td>
            </tr>
            <tr>
                <th>Nourriture</th>
                <td>{{ asma.nourriture }}</td>
            </tr>
            <tr>
                <th>Famille</th>
                <td>{{ asma.famille }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('asma_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('asma_edit', { 'id': asma.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
